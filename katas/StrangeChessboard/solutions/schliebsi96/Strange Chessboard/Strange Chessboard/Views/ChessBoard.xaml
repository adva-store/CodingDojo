<?xml version="1.0" encoding="UTF-8"?>
<StackLayout BackgroundColor="Gray"
             xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Strange_Chessboard.Views.ChessBoard"
             xmlns:viewModels="clr-namespace:Strange_Chessboard.ViewModels">
    <Label Text="Please enter the rows and columns" TextColor="White"/>
            <Label Text="CS" TextColor="White"/>
            <Entry Text="{Binding CS, Mode = TwoWay}" Placeholder="1,2,3,4"/>
            <Label Text="RS" TextColor="White"/>
            <Entry Text="{Binding RS, Mode = TwoWay}" Placeholder="1,2,3,4"/>
            <Label Text="Output" TextColor="White"/>
            <Label Text="{Binding Output}" TextColor="Black" BackgroundColor="White"/>
            <Button HorizontalOptions="Center" VerticalOptions="End" Text="Do something"  
                Command="{Binding Source={RelativeSource AncestorType={x:Type   
               viewModels:ChessBoardViewModel}}, Path=CalculateWoodCommand}"  />
</StackLayout>