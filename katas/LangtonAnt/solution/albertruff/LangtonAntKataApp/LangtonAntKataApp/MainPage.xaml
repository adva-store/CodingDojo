<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LangtonAntKataApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Label Text="Langtons Ameise" HorizontalOptions="CenterAndExpand" FontSize="Title" FontAttributes="Bold"/>
            <HorizontalStackLayout Spacing="10" HeightRequest="60">
                <Label Text="Bitte geben Sie die Zuggeschwindikeit ein:" VerticalOptions="Center" HorizontalOptions="Start"/>
                <Entry Text="{Binding MoveSpeed}" VerticalOptions="Center" Keyboard="Numeric" WidthRequest="35" />
                <Label Text="sek." HorizontalOptions="Start" VerticalOptions="Center"/>
            </HorizontalStackLayout>
            <Button Text="Zum Feld" Command="{Binding NavigateToFieldPageCommand}"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
