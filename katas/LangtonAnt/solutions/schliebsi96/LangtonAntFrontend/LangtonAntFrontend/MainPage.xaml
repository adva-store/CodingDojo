<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LangtonAntFrontend.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />


            <Label
                Text="How long are Turns in ms:"
                FontSize="18"
                HorizontalOptions="Center" />

            <Entry 
                Placeholder="100"
                x:Name="Duration"/>

            <Label
                Text="Click to pick a json"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="ReadBtn"
                Text="Click me"
                Clicked="OnButtonClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
